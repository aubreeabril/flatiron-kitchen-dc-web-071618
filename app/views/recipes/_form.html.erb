<%= form_for @recipe do |f| %>

<div class="field">
<%= f.label :name %>
<%= f.text_field :name %><br>
</div>

<div class="field">
<%= f.label :ingredients %><br>
<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name, un_checked: Ingredient.all.map(&:id) do |b| %>
  <span>
    <%= b.check_box %>
    <%= b.label %><br>
  </span>
      <% end %>


      <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredient_fields| %>
        <%= ingredient_fields.text_field :name %><br>


  <% end %>
</div>
<%= f.submit %>
<% end %>
